{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    "defaultProfile": "{f398acec-b402-461a-890c-b6f8d8509cfd}",
    "initialCols": 240,
    "initialRows": 60,
    "initialPosition": "2,8",
    "startupActions": "; wt -w 0 nt -d C:\\Workspace\\Code --title Code",
